@model RailwayReservationMVC.Models.User
    <head>
        <link href="~/Content/LogIn.css" rel="stylesheet" />
    </head>

    <body>
        
        
        <div class="border" style=" text-align:center">
            <h2>LogIn</h2>
            <p>Please fill in this form to create an account!</p>
            <hr>

            <div class="form-group  col-12 mt-3 w-auto">

                @Html.DisplayNameFor(model => model.Email)&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp

                @Html.TextBoxFor(model => model.Email)

            </div>
            <div class="form-group  col-12 mt-3 col-xs-7">

                @Html.DisplayNameFor(model => model.Password)
                @Html.TextBoxFor(model => model.Password)

            </div>

            <div class="form-group col-12 mt-3">
                <button type="submit" class="btn btn-primary btn-sm">Log in</button>
            </div>
            <div class="clearfix">

                <a href="~/Home/ForgetPassword" class="float-right">Forgot Password?</a>
            </div>

            <div class="hint-text">New User? <a href="~/Home/SignUp">SignUp here</a></div>
        </div>
        </body>