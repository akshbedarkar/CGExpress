
<style>
    body {
        background-image: url('https://cdn.pixabay.com/photo/2018/02/21/10/16/train-station-3169964_1280.jpg');
        height: 100vh;
    }


    .card {
        display: inline-block;
        margin: auto;
    }
</style>

<div class="alert alert-warning alert-dismissible fade show" role="alert">
    @TempData["Message"]
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<br />
<br />
<br />
<br />
<br />
<br />

<!-- Background image -->
<div class="bg-image d-flex justify-content-center align-items-center">
    <div class="card" style="width: 18rem; background-color:aliceblue">
        <div class="card-body">
            <div class="col-mt-2">
                <h5 class="card-title">View Train Details</h5>
                <p class="card-text">View all the available train details</p>
                <a href="ViewTrainDetails" class="btn btn-primary">Show Available Trains</a>
            </div>
        </div>
    </div>

    <div class="card" style="width: 18rem; background-color:aliceblue">
        <div class="card-body">
            <div class="col-mt-2">
                <h5 class="card-title">Reservation</h5>
                <p class="card-text">Book Train Tickets</p>
                @Html.ActionLink("Book Ticket", "Index", "Res", "", new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>

    <div class="card" style="width: 18rem; background-color:aliceblue">
        <div class="card-body">
            <div class="col-mt-2">
                <h5 class="card-title">Cancel Ticket!</h5>
                <p class="card-text">Enter your PNR number !</p>
                @*<a href="homepage" class="btn btn-primary">Cancel Ticket!</a>*@
                @Html.ActionLink("Cancel Ticket", "CancelPNR", "Res", "", new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>

</div>






